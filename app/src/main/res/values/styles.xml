<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@null</item>

    </style>

    <style name="ArrowImageView">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:rotation">90</item>
        <item name="android:src">@drawable/arrow_white</item>

    </style>

    <style name="ButtonBottom">

        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:background">@drawable/stroke</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">serif</item>

    </style>

    <style name="ButtonTop">

        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/transparent_white</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>

    </style>

    <style name="CleanImageView">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">5dp</item>
        <item name="android:background">@drawable/clean</item>
        <item name="android:visibility">gone</item>

    </style>

    <style name="DatePickerDialog" parent="android:Theme.Holo.Light.Dialog.MinWidth">

        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="EditText">

        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">7.5dp</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
        <item name="android:hint">חפש מותגים</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">monospace</item>

    </style>

    <style name="EmptyView">

        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="ExpandableListView">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:childDivider">@android:color/transparent</item>
        <item name="android:divider">@android:color/white</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:groupIndicator">@null</item>
        <item name="android:scrollbars">none</item>

    </style>

    <style name="RadioButton1" parent="TextViewWhite">

        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">serif</item>

    </style>

    <style name="RadioButton2" parent="TextViewWhite">

        <item name="android:button">@null</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="RadioButton3" parent="TextViewBlack">

        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>

    </style>

    <style name="Theme_Translucent" parent="android:Theme.Translucent">

        <item name="android:background">@color/transparent_black</item>

    </style>

    <style name="TextViewBlack">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:typeface">monospace</item>

    </style>

    <style name="TextViewWhite">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">monospace</item>

    </style>

    <style name="TicketTextView" parent="TextViewWhite">

        <item name="android:layout_width">100dp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="ToggleButton">

        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:background">@drawable/toggle_selector</item>
        <item name="android:textOff">@null</item>
        <item name="android:textOn">@null</item>

    </style>

    <style name="VoucherInfoButton" parent="ButtonTop">

        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>

    </style>

    <style name="VoucherTypeButton" parent="ButtonTop">

        <item name="android:drawableEnd">@drawable/check_mark</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="WhiteDivider">

        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/white</item>

    </style>

    <style name="WhiteDividerWithMargin">

        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/white</item>

    </style>

    <style name="WhiteDividerWithMargin1" parent="WhiteDividerWithMargin">

        <item name="android:layout_margin">10dp</item>

    </style>

    <style name="WhiteDividerWithMargin2" parent="WhiteDividerWithMargin">

        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>

    </style>

</resources>
