<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_black"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextViewWhite"
        android:drawableBottom="@drawable/check_mark2"
        android:drawablePadding="15dp"
        android:text="@string/upload_success_title"
        android:typeface="serif" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/address"
            style="@style/TextViewWhite" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/changePaymentSystem"
            style="@style/TextViewWhite"
            android:text="@string/purchase_success_change" />

    </RadioGroup>

    <View
        style="@style/WhiteDivider"
        android:layout_margin="20dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/voucherWorth"
        style="@style/TextViewWhite"
        android:layout_marginBottom="5dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/percentOff"
        style="@style/TextViewWhite"
        android:layout_marginBottom="10dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/salePrice"
        style="@style/TextViewWhite"
        android:textSize="25sp" />

</android.support.v7.widget.LinearLayoutCompat>