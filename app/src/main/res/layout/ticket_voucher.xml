<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/brand"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/top"
        android:scaleType="fitXY" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/viewMore"
        style="@style/TextViewWhite"
        android:layout_alignBaseline="@id/brand"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7.5dp"
        android:text="@string/ticket_voucher_view_more" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/precious"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7.5dp" />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_below="@id/brand"
        android:orientation="horizontal"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/mapContainer"
        android:background="@drawable/bottom" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/voucherValue"
        style="@style/TextViewBlack"
        android:layout_below="@id/mapContainer"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="7.5dp"
        android:textSize="25sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/voucherWorth"
        style="@style/TextViewBlack"
        android:layout_below="@id/voucherValue"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:textSize="15sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/price"
        style="@style/TextViewBlack"
        android:layout_below="@id/mapContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2.5dp"
        android:layout_marginTop="7.5dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/discount"
        style="@style/TextViewBlack"
        android:layout_alignLeft="@id/price"
        android:layout_alignStart="@id/price"
        android:layout_below="@id/price"
        android:layout_marginBottom="3.5dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/discount"
        android:layout_alignStart="@id/discount"
        android:layout_below="@id/discount"
        android:layout_marginBottom="5dp"
        android:textSize="12.5sp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/mapContainer"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/deliveryTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/cart"
        android:src="@drawable/delivery_tag" />

</RelativeLayout>